<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.EZQUIZITO.slidingselfiegfx.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" 
        android:layout_alignParentTop="true"
        android:weightSum="10">

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iconback" />
        
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@android:color/black"/>

        <Button
            android:id="@+id/btnMusic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iconmusic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout1"
        android:gravity="center"
        android:orientation="horizontal" >
        
    </LinearLayout>

   
    
    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" 
        android:layout_alignParentBottom="true"
        android:weightSum="10" >
        

        <Button
            android:id="@+id/btnIcon3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon3" />

        <Button
            
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/black" />
        
        
        <Button
            
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/black" />
        
        <Button
            android:id="@+id/btnIcon4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon4" />
        
       
        
        <Button
            android:id="@+id/btnShuffle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/iconshuffle" />
        
        <Button
            android:id="@+id/btnGaleria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icongaleria" />
        
        <Button
            
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/black" />
        <Button
            
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/black" />
        
        <Button
            android:id="@+id/btnCam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iconcam" />
        
        
    </LinearLayout>

</RelativeLayout>
